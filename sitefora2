<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	ServerName icelog.tk
	
	Alias /robots.txt /home/iceleaf/icelog/static/robots.txt
	Alias /favicon.ico /home/iceleaf/icelog/static/favicon.ico

	AliasMatch ^/([^/]*\.css) /home/iceleaf/icelog/static/styles/$1

	Alias /media/ /home/iceleaf/icelog/media/
	Alias /static/ /home/iceleaf/icelog/static/

	<Directory /home/iceleaf/icelog/static>
		Order deny,allow
		Allow from all
	</Directory>

	<Directory /home/iceleaf/icelog/media>
		Order deny,allow
		Allow from all
	</Directory>

	WSGIScriptAlias / /home/iceleaf/icelog/wsgi_app.py
	<Directory /home/iceleaf/icelog>
	<Files wsgi_app.py>
		Order allow,deny
		Allow from all
	</Files>
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/blog_error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog ${APACHE_LOG_DIR}/blog_access.log combined
</VirtualHost>
